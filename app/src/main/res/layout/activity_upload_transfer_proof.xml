<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".activity.UploadTransferProofActivity">

    <TextView
        android:id="@+id/textViewKodeVerifikasi"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonPilihBuktiBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Bukti Bayar"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/imageViewBuktiBayar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonUploadBuktiBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unggah Bukti Bayar"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorWhite"
        android:visibility="gone"
        android:clickable="true"/>

</LinearLayout>